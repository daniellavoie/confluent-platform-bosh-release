---
name: confluent-control-center

templates:
  bin/ctl: bin/ctl
  bin/pre-start.erb: bin/pre-start
  config/bpm.yml: config/bpm.yml
  config/ca_certs.pem.erb: config/ca_certs.pem
  config/cert.pem.erb: config/cert.pem
  config/control-center.properties.erb: config/control-center.properties
  config/key.pem.erb: config/key.pem
  config/log4j.properties: config/log4j.properties

consumes:
- name: confluent-zookeeper
  type: zookeeper-conn
- name: confluent-server
  type: server-conn
- name: confluent-schema-registry
  type: registry-conn
- name: confluent-connect
  type: connect-conn
- name: confluent-ksql
  type: ksql-conn

provides:
- name: confluent-control-center
  type: control-center-conn
  properties:
  - listen_port

packages:
- openjdk-8
- confluent-platform

properties:
  listen_port:
    description: The port to listen for client connections
    default: 9021

  confluent.license:
    description: "Confluent Platform License"

  tls.ca_certs:
    description: |
      List of CA certs used to verify the brokers certificates
    default: []

  tls.certificate:
    description: |
      Certificate used in the 2 way SSL connection with the brokers.

  tls.https_certificate
    description |
      Certificate served by the https API of Control Center

  keystore_password:
    description: "Keystore password"
    default: notasecret

  jaas.username:
    description: "Username used in JAAS configuration"

  jaas.password:
    description: "Password used in JAAS configuration"
